<div class="container">
     <div class="row">
         <div class="col-md-6">
            <img src="https://i.pinimg.com/originals/13/93/1f/13931fb7029364c9c9f194950bd46edb.png" class="center-block", style="width: 400px;">
        </div>
        <div class="col-md-6"> <h1>Login form</h1>
            <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %> 
            <%=f.label :email, "email", class: "mb-2"%>
            <%=f.email_field :email , class: "form-control mb-3"%>
            <%= f.label :password, "password", class: "mt-2"%> 
            <%=f.password_field :password, class: "form-control mb-3"%>
            
            <div class="text-center mt-4">
              <%=f.submit "signin", disable_with: 'Submiting...', class: "px-5"%>
            </div>
            <% end %>
        </div>
    </div>    
</div>

<%= render 'tasks/footer'%>