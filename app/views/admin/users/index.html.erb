<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class= "table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Task count</th>
      <th>Is Admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%=user.tasks.count%></td>
      <td>
          <% if user.is_admin %>
          <span class="badge rounded-pill bg-warning text-dark">Admin</span>
          <% else %>
          <span class="badge rounded-pill bg-secondary text-wight">Admin</span>
          <% end %>
      </td>
      <td><%= link_to 'Show', user, class:"btn btn-outline-primary"%></td>
      <td><%= link_to 'Edit', edit_admin_user_path(user), class:"btn btn-outline-success"%></td>
      <td><%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger"%></td>

    </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'New User', new_admin_user_path %>

<%= render 'tasks/footer'%>